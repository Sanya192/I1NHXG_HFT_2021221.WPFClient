<Window x:Class="VegyesBolt.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VegyesBolt.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".2*"/>
            <RowDefinition/>
            <RowDefinition Height=".3*"/>
        </Grid.RowDefinitions>
        <!-- Table Buttons-->
        <UniformGrid Grid.Row="0" Columns="4">
            <Button Grid.Column="0" Content="Megyék" Name="MegyeButton"/>
            <Button Grid.Column="1" Content="Vásárlók" Name="VasarloButton"/>
            <Button Grid.Column="2" Content="Termékek" Name="TermekButton"/>
            <Button Grid.Column="3" Content="Vásárlások" Name="VasarlasButton"/>
        </UniformGrid>
        <!---->
        <UniformGrid Grid.Row="2" Columns="3">
            <Button Grid.Column="0" Content="Save" Name="SaveButton"/>
            <Button Grid.Column="1" Content="Update" Name="UpdateButton"/>
            <Button Grid.Column="2" Content="Delete" Name="DeleteButton"/>
        </UniformGrid>
    </Grid>
</Window>
